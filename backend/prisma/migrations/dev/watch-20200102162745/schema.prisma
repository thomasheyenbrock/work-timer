model Break {
  id       String @default(cuid()) @id
  duration Int
}

model WorkTime {
  id    String   @default(cuid()) @id
  start DateTime
  end   DateTime
}

model Weekday {
  id        String     @default(cuid()) @id
  workTimes WorkTime[]
  breaks    Break[]
}